@model SOCISA.Models.SocietateAsigurare[]

@{
    ViewBag.Title = socisaV2.Resources.LoginResx.SELECTATI_SOCIETATE;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container body-content">
        <h2>@socisaV2.Resources.LoginResx.SELECTATI_SOCIETATE_HEADER</h2>
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-sm-2">
                    <label for="Societate" class="control-label">@socisaV2.Resources.LoginResx.SOCIETATE:</label>
                </div>
                <div class="col-sm-10">
                    @Html.DropDownList("Societate", new SelectList(Model, "ID", "DENUMIRE"), socisaV2.Resources.LoginResx.SELECTATI_SOCIETATE, new { @class = "form-control" })
                </div>
            </div>
            <!--
            <div class="form-group">
                <input type="submit" value="Continua >>" class="btn btn-default" />
            </div>
            -->
            <hr />
        </div>
    </div>

    <script>
        $("#Societate").change(function () {
            $("#Societate").closest("form").submit();
        });
    </script>
}
