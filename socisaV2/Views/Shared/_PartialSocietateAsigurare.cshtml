                    @Html.EditorFor(model => model.NR_REG_COM, new { htmlAttributes = new { @class = "form-control input-sm customInput", a_disabled = "editMode != 1", data_ng_model = "model.NR_REG_COM", data_ng_init = string.Format("model.NR_REG_COM = '{0}'", Model.NR_REG_COM) } })
                    @Html.ValidationMessageFor(model => model.NR_REG_COM, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row small">
