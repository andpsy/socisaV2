                    @Html.ValidationMessageFor(model => model.ADRESA, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row small">
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.BANCA, htmlAttributes: new { @class = "control-label" })
