                    @Html.LabelFor(model => model.CUI, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.CUI, new { htmlAttributes = new { @class = "form-control input-sm customInput", a_disabled = "editMode != 1", data_ng_model = "model.CUI", data_ng_init = string.Format("model.CUI = '{0}'", Model.CUI) } })
                    @Html.ValidationMessageFor(model => model.CUI, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-6">
