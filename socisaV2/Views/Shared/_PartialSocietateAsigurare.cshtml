                    @Html.LabelFor(model => model.DETALII, htmlAttributes: new { @class = "control-label" })
                    @Html.TextAreaFor(model => model.DETALII, new { @class = "form-control input-sm customInput", a_disabled = "editMode != 1", data_ng_model = "model.DETALII", data_ng_init = string.Format("model.DETALII = '{0}'", Model.DETALII) })
